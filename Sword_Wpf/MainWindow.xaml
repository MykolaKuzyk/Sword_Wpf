<Window x:Class="Sword_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sword_Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="175.3" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.ColumnSpan="2" Content="Roll for damage" HorizontalAlignment="Left" Margin="96,14,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <CheckBox x:Name="flaming" Content="Flaming" HorizontalAlignment="Left" Margin="46,20,0,0" VerticalAlignment="Top" Checked="flaming_Checked" Unchecked="flaming_Unchecked"/>
        <CheckBox x:Name="magic" Content="Magic" HorizontalAlignment="Left" Margin="38,20,0,0" VerticalAlignment="Top" Grid.Column="1" Checked="magic_Checked" Unchecked="magic_Unchecked"/>
        <Label x:Name="damage" Content="Damage" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="272"/>

    </Grid>
</Window>
